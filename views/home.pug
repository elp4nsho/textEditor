    div.contenido
        div.contenidoArchivos
            h3="Files"
            button(onclick="crearDirectorio(prompt().toString())")="üìÅ"
            button(onclick="crearArchivo(prompt())")="‚ûï"
            button(onclick="irAHome()")="üè†"
            br
            small#ruta=directorioActual
            ul#directorios
                li(onClick="obtenerDirectorios('../')")="../"
                each file in files
                    li(onClick=`${file.isDirectory() ? 'obtenerDirectorios("' + file.name + '")' : 'obtenerArchivo("' + file.name + '")'}` class=`${file.isDirectory() ? "directorio" : "archivo"}` )=file.name
                    button.eliminar(onclick=`eliminarDirectorio("${file.name}")`)="X"
        div.contenidoEditor
            input(value="data.txt" onkeyup=`renombrarArchivo()`)#archivoEditando
            button#guardar(onclick="escribirArchivo()")="Guardar"
            div(id="editor")
